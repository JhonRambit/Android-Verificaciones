<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Login" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="234dp"
        android:layout_weight="0.67"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:src="@drawable/logo_eline" />

        <EditText
            android:id="@+id/txtLogUsuario"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Usuario"
            android:inputType="textCapCharacters|textNoSuggestions"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textColor="#DA70D6"
            android:textSize="17dp" />

        <requestFocus />

        <TextView
            android:id="@+id/lblLogUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:text=" Contraseña:"
            android:textColor="#4B0082"
            android:textStyle="bold"
            android:typeface="monospace"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/txtLogPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Contraseña"
            android:inputType="textCapCharacters|textNoSuggestions"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:password="true"
            android:textColor="#DA70D6"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnLogverificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#4B0082"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:shadowColor="#FF8800"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:text="Iniciar sesión"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblLogLatitudX"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/lblLogLongitudY"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblLogDireccion"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/lblLogEstado"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/lblLogVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#4B0082" />
    </LinearLayout>
</LinearLayout>